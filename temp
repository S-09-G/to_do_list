/**
 * API Service - Handles all backend communication
 */

import axios from 'axios';

// Base URL for API
const API_BASE_URL = 'http://127.0.0.1:8000/api';

// Create axios instance
const api = axios.create({
  baseURL: API_BASE_URL,
  headers: {
    'Content-Type': 'application/json',
  },
});

// ============================================================
// HEALTH & CONFIG
// ============================================================

export const checkHealth = async () => {
  const response = await axios.get('http://127.0.0.1:8000/health');
  return response.data;
};

export const getConfig = async () => {
  const response = await api.get('/config');
  return response.data;
};

export const updateConfig = async (updates) => {
  const response = await api.put('/config', updates);
  return response.data;
};

export const getAlgorithms = async () => {
  const response = await api.get('/config/algorithms');
  return response.data;
};

export const updateAlgorithm = async (algorithmName, enabled, parameters) => {
  const params = new URLSearchParams();
  if (enabled !== null) params.append('enabled', enabled);
  
  const response = await api.put(
    `/config/algorithms/${algorithmName}?${params.toString()}`,
    parameters || {}
  );
  return response.data;
};

// ============================================================
// DATA
// ============================================================

export const validateData = async () => {
  const response = await api.get('/data/validate');
  return response.data;
};

export const getDataInfo = async () => {
  const response = await api.get('/data/info');
  return response.data;
};

// ============================================================
// PIPELINE
// ============================================================

export const runFeatureEngineering = async (options = {}) => {
  const response = await api.post('/pipeline/features', options);
  return response.data;
};

export const compareAlgorithms = async (options = {}) => {
  const response = await api.post('/pipeline/clustering/compare', options);
  return response.data;
};

export const trainModel = async (algorithm, nClusters) => {
  const response = await api.post('/pipeline/clustering/train', {
    algorithm: algorithm,
    n_clusters: nClusters,
  });
  return response.data;
};

// ============================================================
// RESULTS
// ============================================================

export const getComparisonResults = async () => {
  const response = await api.get('/results/comparison');
  return response.data;
};

export const getClusterAssignments = async (algorithm) => {
  const response = await api.get(`/results/clusters/${algorithm}`);
  return response.data;
};

// Export default api instance for custom calls
export default api;













/**
 * Main App Component - Dashboard Layout
 */

import React, { useState } from 'react';
import { 
  Database, 
  Settings, 
  PlayCircle, 
  BarChart3, 
  GitCompare,
  Cpu,
  CheckCircle,
  XCircle,
  Loader2,
  RefreshCw
} from 'lucide-react';
import './App.css';

// Import pages
import DataPage from './pages/DataPage';
import ConfigPage from './pages/ConfigPage';
import FeaturePage from './pages/FeaturePage';
import ClusteringPage from './pages/ClusteringPage';
import ResultsPage from './pages/ResultsPage';

function App() {
  const [activePage, setActivePage] = useState('data');
  const [apiStatus, setApiStatus] = useState('unknown'); // 'unknown', 'connected', 'error'

  // Check API connection
  const checkApiConnection = async () => {
    setApiStatus('checking');
    try {
      const response = await fetch('http://127.0.0.1:8000/health');
      if (response.ok) {
        setApiStatus('connected');
      } else {
        setApiStatus('error');
      }
    } catch (error) {
      setApiStatus('error');
    }
  };

  // Check on mount
  React.useEffect(() => {
    checkApiConnection();
  }, []);

  // Navigation items
  const navItems = [
    { id: 'data', label: 'Data', icon: Database },
    { id: 'config', label: 'Configuration', icon: Settings },
    { id: 'features', label: 'Feature Engineering', icon: Cpu },
    { id: 'clustering', label: 'Clustering', icon: GitCompare },
    { id: 'results', label: 'Results', icon: BarChart3 },
  ];

  // Render active page
  const renderPage = () => {
    switch (activePage) {
      case 'data':
        return <DataPage />;
      case 'config':
        return <ConfigPage />;
      case 'features':
        return <FeaturePage />;
      case 'clustering':
        return <ClusteringPage />;
      case 'results':
        return <ResultsPage />;
      default:
        return <DataPage />;
    }
  };

  return (
    <div className="app">
      {/* Sidebar */}
      <aside className="sidebar">
        <div className="sidebar-header">
          <h1>ðŸŽ¯ User Clustering</h1>
          <p>Samsung Analytics</p>
        </div>

        {/* API Status */}
        <div className={`api-status status-${apiStatus}`}>
          {apiStatus === 'checking' && (
            <>
              <Loader2 className="icon spinning" size={16} />
              <span>Connecting...</span>
            </>
          )}
          {apiStatus === 'connected' && (
            <>
              <CheckCircle className="icon" size={16} />
              <span>API Connected</span>
            </>
          )}
          {apiStatus === 'error' && (
            <>
              <XCircle className="icon" size={16} />
              <span>API Offline</span>
              <button onClick={checkApiConnection} className="retry-btn">
                <RefreshCw size={14} />
              </button>
            </>
          )}
          {apiStatus === 'unknown' && (
            <>
              <Loader2 className="icon" size={16} />
              <span>Checking...</span>
            </>
          )}
        </div>

        {/* Navigation */}
        <nav className="nav">
          {navItems.map((item) => (
            <button
              key={item.id}
              className={`nav-item ${activePage === item.id ? 'active' : ''}`}
              onClick={() => setActivePage(item.id)}
            >
              <item.icon size={20} />
              <span>{item.label}</span>
            </button>
          ))}
        </nav>

        {/* Workflow hint */}
        <div className="workflow-hint">
          <h4>Workflow</h4>
          <ol>
            <li className={activePage === 'data' ? 'current' : ''}>Validate Data</li>
            <li className={activePage === 'config' ? 'current' : ''}>Configure</li>
            <li className={activePage === 'features' ? 'current' : ''}>Features</li>
            <li className={activePage === 'clustering' ? 'current' : ''}>Cluster</li>
            <li className={activePage === 'results' ? 'current' : ''}>Results</li>
          </ol>
        </div>
      </aside>

      {/* Main Content */}
      <main className="main-content">
        {apiStatus === 'error' ? (
          <div className="api-error-banner">
            <XCircle size={20} />
            <span>Backend API is not running. Start it with: <code>uvicorn api.main:app --reload --port 8000</code></span>
          </div>
        ) : null}
        {renderPage()}
      </main>
    </div>
  );
}

export default App;











